#!/bin/bash
if [[ $(id -u) -ne 0 ]]
	then echo "Run as root"
	exit
fi
echo "copying script to usr/bin"
wait
sleep 1
cp install_ffmpeg /usr/bin
wait
sleep 1
read -p "Enter Number CPU Cores to Use:" core
mkdir -p /opt/ffmpeg/src
wait
apt install autoconf build-essential automake gcc git libtool make pkgconf zlib1g-dev lua50 zvbi nasm libdvdread-dev libdc1394-22-dev libxcb1-dev xcb libxml2-dev libglu1-mesa-dev libpulse-dev libalsa-ocaml-dev libgcrypt20-dev libgsm1-dev libbluray-dev yasm libva-dev libass-dev libkate-dev libdvdnav-dev libcdd-dev libmpeg2-4-dev libxvidcore-dev libx265-dev libsdl2-dev curl
wait
cd /opt/ffmpeg/src
wait
git clone git://git.videolan.org/x264.git
wait
cd x264
wait
./configure --enable-shared
wait
make -j$core
wait
make install
wait
cd ..
wait
pwd
wait
git clone --depth 1 git://github.com/mstorsjo/fdk-aac.git
wait
cd fdk-aac
wait
autoreconf -fiv
wait
./configure --enable-shared
wait
make -j$core
wait
make install
wait
cd ..
wait
pwd
wait
curl -OL http://downloads.sourceforge.net/project/lame/lame/3.99/lame-3.99.5.tar.gz
wait
tar xzvf lame-3.99.5.tar.gz
wait
cd lame-3.99.5
wait
./configure --enable-shared --enable-nasm
wait
make -j$core
wait
make install
wait
cd ..
wait
pwd
wait
curl -OL http://downloads.sourceforge.net/project/opencore-amr/opencore-amr/0.1.2/opencore-amr-0.1.2.tar.gz
wait
tar xzvf opencore-amr-0.1.2.tar.gz
wait
cd opencore-amr-0.1.2/
wait
./configure
wait
make -j$core
wait
make install
wait
cd ..
wait
pwd
wait
curl -OL http://downloads.xiph.org/releases/ogg/libogg-1.3.0.tar.gz
wait
tar xzvf libogg-1.3.0.tar.gz
wait
cd libogg-1.3.0
wait
./configure --enable-shared
wait
make -j$core
wait
make install
wait
cd ..
wait
pwd
wait
curl -OL http://downloads.xiph.org/releases/theora/libtheora-1.1.1.tar.gz
wait
tar xzvf libtheora-1.1.1.tar.gz
wait
cd libtheora-1.1.1
wait
./configure --enable-shared
wait
make -j$core
wait
make install
wait
cd ..
wait
pwd
wait
curl -OL http://downloads.xiph.org/releases/vorbis/libvorbis-1.3.3.tar.gz
wait
tar xzvf libvorbis-1.3.3.tar.gz
wait
cd libvorbis-1.3.3
wait
./configure --enable-shared
wait
make -j$core
wait
make install
wait
git clone https://github.com/webmproject/libvpx
wait
cd libvpx
wait
./configure --enable-shared
wait
make -j$core
wait
make install
wait
cd ..
wait
pwd
wait
cd ..
git clone git://source.ffmpeg.org/ffmpeg
wait
cd ffmpeg
wait
pwd
wait
./configure --enable-gpl --enable-version3 --enable-libfdk_aac --enable-libmp3lame --enable-libtheora --enable-libvorbis --enable-libvpx --enable-libx264 --enable-libx265 --enable-nonfree --enable-libopencore-amrnb --enable-libopencore-amrwb --enable-libgsm --enable-libxvid  --disable-static --enable-shared --enable-sdl2
wait
make -j$core
wait
make install
wait
ffmpeg
echo "/usr/local/lib/" >> /etc/ld.so.conf
wait
ldconfig
